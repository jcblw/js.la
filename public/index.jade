!= partial("_hero", public._data.current )

if public._data.current.offmonth

    div.jsla-toplevel-container

        div.off-month.lightning

            h2.off-month-title We are off this month
            p.description= public._data.current.description

            blockquote Get notified when the next event is by joining the 
                a(href="http://eepurl.com/jdRNb") Newsletter


        if public._data.current.videos

            div.featured-videos.lightning
                h2.off-month-title Awesome Videos from this year.

                each video in public._data.current.videos

                    div.featured-video
                        h5.video-title= video.title
                        a.fancybox-media(href="http://vimeo.com/#{video.video}")
                            img.videoimg(src="/images/videos/#{video.videoimg}", width="500", height="281")


        if public._data.current.events

            div.featured-events.lightning
                h2.off-month-title Other awesome LA events.
                ul.events
                    // pretty much a list of links
                    each _event in public._data.current.events
                        li.event        
                            a( href=_event.link )
                                h6= _event.title
                

        != partial("_want-to-present")


else

    div.jsla-current-event( id="current-event" )

        div.jsla-toplevel-container
            != partial("_speakers", public._data.current )
        div.jsla-toplevel-container
            != partial( "_action-buttons", public._data.current )
            != partial("_map", public._data.current.host )
            != partial( "_sponsors-box", { sponsors: public._data.current.sponsors } )

            != partial("_want-to-present")
            != partial( "_action-buttons", public._data.current )

